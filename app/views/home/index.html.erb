<h1>Rock Paper Scissors</h1>
<h2>Who won?</h2>
<%= form_with(url: "/rock_wins", method: "POST") do %>
  <%= submit_tag("Rock") %>
<% end %>
<%= form_with(url: "/paper_wins", method: "POST") do %>
  <%= submit_tag("Paper") %>
<% end %>
<%= form_with(url: "/scissors_wins", method: "POST") do %>
  <%= submit_tag("Scissors") %>
<% end %>
<h3>Global results</h3>
<%= @results_tracker.rock_wins.to_s %>
<%= @results_tracker.paper_wins.to_s %>
<%= @results_tracker.scissors_wins.to_s %>